{% extends "CaesarUserBundle::layout.html.twig" %}

{% block bodyTitle %}
<h1>{{login_page_title}}</h1>
{% endblock %}

{% block caesar_user_content %}
{% if error %}
<div class="flash-error">{{ error.message|trans }}</div>
{% endif %}

<form class="form-client" action="{{ path('caesar_client_login_check') }}" method="post" autocomplete="off">
    <label for="_username">{{ 'user.login.label.username'|trans({}, 'CaesarUserBundle') }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />
    <input type="submit" value="{{ 'user.login.label.login'|trans({}, 'CaesarUserBundle') }}" />
</form>
{% endblock caesar_user_content %}
