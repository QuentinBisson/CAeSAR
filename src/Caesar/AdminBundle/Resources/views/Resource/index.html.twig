{% extends "CaesarAdminBundle::layout.html.twig" %}

{% block stylesheets %}
    {{parent()}}
<link rel="stylesheet" type="text/css" href="{{ asset('css/table.css') }}" />
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/caesaradmin/css/admin.css') }}" />
{% endblock %}

{% block breadCrumb%}
    {{parent()}}
    <li data-header="0" class="active"><span>{{'admin.breadcrumb.resources.list'|trans({})}}</span></li>
{% endblock %}

{% block contentTitle %}{{'admin.title.resources.list'|trans({})}}{% endblock %}

{% block contentBody %}
    <form action="{{ path('caesar_admin_resource_homepage') }}" method="post" {{ form_enctype(searchForm) }}>
        {{ form_errors(searchForm) }}
        {{ form_rest(searchForm) }}
        <input type="submit" class="margin-left" value="{{'admin.button.search'|trans({})}}"/>
    </form>
    <section class="contentBody">
     {% include 'CaesarAdminBundle:Resource:list.html.twig' with {'resources' : resources, 'page' : page, 'direction' : direction, 'pagination' : pagination, 'count': count}  %}
    </section>
{% endblock %}
{% block javascripts %}
{{parent()}}
        <script type="text/javascript" src="{{ asset('js/sort.js') }}" ></script>
{% endblock %}