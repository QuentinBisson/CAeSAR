{% extends "CaesarAdminBundle::layout.html.twig" %}

{% block stylesheets %}
    {{parent()}}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/caesaradmin/css/admin.css') }}" />
{% endblock %}

{% block breadCrumb%}
    {{parent()}}
<li data-header="0" class="active"><span>{{'admin.breadcrumb.general.password'|trans({})}}</span></li>
{% endblock %}

{% block contentTitle %}
{{'admin.title.general.password'|trans({})}}
{% endblock %}
{% block contentBody %}
        <form action="{{ path('caesar_admin_general_password') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
    {{ form_row(form.currentPassword) }}
    {{ form_row(form.newPassword) }}
    {{ form_row(form.confirmPassword) }}
                <input type="submit" value="{{'admin.button.change.password'|trans({})}}"/>
    {{ form_rest(form) }}
            </form>
{% endblock %}

{% block javascripts %}
    {{parent()}}
{% endblock %}