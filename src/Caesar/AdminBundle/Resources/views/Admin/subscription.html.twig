{% extends "CaesarAdminBundle::layout.html.twig" %}

{% block stylesheets %}
    {{parent()}}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/caesaradmin/css/admin.css') }}" />
{% endblock %}

{% block breadCrumb%}
    {{parent()}}
<li data-header="0" class="active"><span>{{'admin.breadcrumb.general.subscriptions'|trans({})}}</span></li>
{% endblock %}

{% block contentTitle %}
{{'admin.breadcrumb.general.subscriptions'|trans({})}}
{% endblock %}

{% block contentBody %}
        <form action="{{ path('caesar_admin_general_subscriptions') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
                <fieldset>
                    
                    <div class="smallElements">
            {{ form_label(form.active_subscription) }}
            {{ form_errors(form.active_subscription) }}
            {{ form_widget(form.active_subscription) }}
                        </div>            
                    </fieldset>                       
                    <input type="submit" value="{{'admin.button.webmining.manage'|trans({})}}"/>
        {{ form_rest(form) }}
                </form>
{% endblock %}