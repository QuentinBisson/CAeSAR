{% extends "CaesarAdminBundle::layout.html.twig" %}

{% block breadCrumb%}
    {{parent()}}
<li data-header="1">
    <a href="{{path('caesar_admin_user_homepage')}}">{{'admin.breadcrumb.users.list'|trans({})}}</a>
    <span class="divider">></span>
</li>
<li class="active"><span>{{'admin.breadcrumb.users.add'|trans({})}}</span></li>
{% endblock %}

{% block contentTitle %}
{{'admin.title.users.add'|trans({})}}
{% endblock %}

{% block contentBody %}
<form action="{{ path('caesar_admin_user_add') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        <fieldset>
            <legend>Données personnelles</legend>
            {{ form_row(form.codeBu) }}
            {{ form_row(form.name) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.email) }}
        </fieldset>
        <fieldset>
            <legend>Données de connexion</legend>
            {{ form_row(form.username) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.confirmPassword) }}
        </fieldset>
        {{ form_rest(form) }}
        <input type="submit" />
    </form>
{% endblock %}