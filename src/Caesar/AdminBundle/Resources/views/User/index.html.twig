{% extends "CaesarAdminBundle::layout.html.twig" %}

{% block breadCrumb%}
    {{parent()}}
<li data-header="1" class="active"><span>Utilisateurs</span></li>
{% endblock %}

{% block contentTitle %}Lister les utilisateurs{% endblock %}

{% block contentBody %}
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th class = "userBu">{{ knp_pagination_sortable(pagination, 'Code BU', 'u.codeBu') }}</th>
            <th{% if pagination.isSorted('u.login') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Login', 'u.login') }}</th>
            <th{% if pagination.isSorted('u.nom') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nom', 'u.nom') }}</th>
            <th{% if pagination.isSorted('u.prenom') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Prenom', 'u.prenom') }}</th>
            <th{% if pagination.isSorted('u.email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Adresse mail de contact', 'u.email') }}</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for user in pagination %}
            <tr>
                <td>{{ user.codeBu }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{path('caesar_admin_user_update', {'id': user.id})}}">
                        <i class="icon-edit"></i>

                    </a>
                </td>
                <td>
                    <a href="{{path('caesar_admin_user_delete', {'id': user.id})}}">
                         <i class="icon-remove"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        <tbody>
    </table>
    <div class="navigation">
    {{ knp_pagination_render(pagination) }}
        </div>
{% endblock %}