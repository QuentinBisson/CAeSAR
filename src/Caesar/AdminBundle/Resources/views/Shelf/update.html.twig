{% extends "CaesarAdminBundle::layout.html.twig" %}
{% block breadCrumb%}
    {{parent()}}
<li data-header="3">
    <a href="{{path('caesar_admin_shelf_homepage')}}">{{'admin.breadcrumb.shelves.list'|trans({})}}</a>
    <span class="divider">></span>
</li>
<li class="active"><span>{{'admin.breadcrumb.shelves.update'|trans({})}}</span></li>
{% endblock %}

{% block contentTitle %}
{{'admin.title.shelves.update'|trans({})}}
{% endblock %}

{% block contentBody %}
<form action="{{ path('caesar_admin_shelf_update', {'id': shelf}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
        <fieldset class="shelf">
            <legend>{{'admin.fieldset.shelves.legend'|trans({})}}</legend>
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
        </fieldset>
        {{ form_rest(form) }}
        <input type="submit" value="{{'admin.button.shelf.update'|trans({})}}"/>
    </form>
{% endblock %}